<h3>Submit</h3>
 <%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br/>
  <%= f.label :url %>
  <%= f.url_field :url %><br/>
  <h3>OR</h3>
  <%= f.label :content %><br/>
  <%= f.text_area :content, cols: 40, rows: 7 %><br/>
  <%= f.hidden_field :user_id, value: the_signed_in_user.id %>
  <%= f.submit %>
<% end %>
